{
  "compilerOptions": {
    "target": "es2015",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "noEmit": true, // Disable emitting JavaScript files
    "allowImportingTsExtensions": true
  },
  "include": ["src/**/*.ts"]
}